{{#> base}}
	{{#*inline "head"}}
		<title>{{story.markdown.title}} - Charlotte Thomas</title>
		<meta property="og:title" content="{{story.markdown.title}}">
		<meta name="description" content="{{story.markdown.summary}}">
		<meta property="og:type" content="article">

		<link rel="stylesheet" href="{{story_css}}">
		{{#if live_reload}}<script>dependency("{{story_css}}")</script>{{/if}}

		<link type="application/atom+xml" rel="alternate" href="{{feed}}" title="CT Writing Den's Blog">
	{{/inline}}
	{{#*inline "body"}}
		<h1>{{{story.markdown.title}}}</h1>
		{{{story.markdown.body}}}

		<p class="back"><a href="#">том Back to top</a></p>
	{{/inline}}
{{/base}}
